<h1>All Articles</h1>

<% @articles.each do |article| %> <!-- Database query -->
  <% if article.current?  %> <!-- Logic in view (not always bad, but we can take care of this example in controller) -->
    <div>
      <%= styled_link_to_article(article) %>
    </div>
  <% end %>
<% end %>

<br>

<div>
  <%= link_to 'New Article', new_article_path %>
</div>
